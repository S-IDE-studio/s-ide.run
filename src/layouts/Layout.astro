---
import '../styles/global.css';
import Footer from '../components/layout/Footer.astro';
import Header from '../components/layout/Header.astro';
import Seo from '../components/layout/Seo.astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
}

const {
  title = 'S-IDE - AIエージェント向け次世代IDE',
  description = 'S-IDEはAIワークフローに最適化されたインテリジェントな開発環境です。マルチターミナル、Monaco Editor、Git統合、Context Manager搭載。',
  image = '/s-ide-icon.svg',
  type = 'website',
} = Astro.props;

// Ensure Astro.site is not null for URL resolution
const siteUrl = Astro.site ?? new URL('https://s-ide.run');
const canonicalURL = new URL(Astro.url.pathname, siteUrl);
const locale = Astro.currentLocale || 'ja';

// Get GA4 measurement ID from environment variable
const GA_MEASUREMENT_ID = import.meta.env.PUBLIC_GA_MEASUREMENT_ID;

// Scroll reveal functionality is in the inline script below
---

<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Favicon with multiple sizes -->
    <link rel="icon" type="image/svg+xml" href="/s-ide-icon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="generator" content={Astro.generator} />
    <!-- Font preloading with display=swap -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700&family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
    <Seo
      title={title}
      description={description}
      image={image}
      type={type}
      canonicalURL={canonicalURL}
    />
    <script is:inline>
      (function() {
        const observerOptions = {
          root: null,
          rootMargin: '0px',
          threshold: 0.1
        };

        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('is-visible');
              // Unobserve after animation for performance
              observer.unobserve(entry.target);
            }
          });
        }, observerOptions);

        const initObserver = () => {
          document.querySelectorAll('[data-reveal]').forEach(el => {
            observer.observe(el);
          });
        };

        // Initialize on page load
        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', initObserver);
        } else {
          initObserver();
        }

        // Re-initialize on Astro page navigation
        document.addEventListener('astro:page-load', initObserver);

        // Cleanup on page unload
        window.addEventListener('beforeunload', () => {
          observer.disconnect();
        });
      })();
    </script>

    <!-- Google Analytics 4 -->
    {GA_MEASUREMENT_ID && (
      <>
        <script is:inline src={`https://www.googletagmanager.com/gtag/js?id=${GA_MEASUREMENT_ID}`}></script>
        <script is:inline>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', GA_MEASUREMENT_ID);
        </script>
      </>
    )}
  </head>
  <body class="min-h-screen flex flex-col bg-black">
    <!-- Skip Navigation Link -->
    <a
      href="#main-content"
      class="skip-link absolute top-4 left-4 z-[100] bg-white text-black px-4 py-2 rounded-md"
    >
      メインコンテンツへスキップ
    </a>
    <Header />
    <main id="main-content" class="flex-1" tabindex="-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
