---
import '../styles/global.css';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Seo from '../components/layout/Seo.astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
}

const {
  title = 'S-IDE - AIエージェント向け次世代IDE',
  description = 'S-IDEはAIワークフローに最適化されたインテリジェントな開発環境です。マルチターミナル、Monaco Editor、Git統合、Context Manager搭載。',
  image = '/og-image.png',
  type = 'website',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const locale = Astro.currentLocale || 'ja';
---

<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <Seo
      title={title}
      description={description}
      image={image}
      type={type}
      canonicalURL={canonicalURL}
    />
  </head>
  <body class="min-h-screen flex flex-col">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
