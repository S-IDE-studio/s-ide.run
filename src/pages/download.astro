---
import Layout from '../layouts/Layout.astro';
import { getLatestRelease, getAssetsByOS, formatFileSize } from '../utils/github-api';
import { translations } from '../i18n/ui';

const locale = Astro.currentLocale || 'ja';
const t = translations[locale as keyof typeof translations];

let latestRelease = null;
let error = null;

try {
  latestRelease = await getLatestRelease();
} catch (e) {
  error = e;
}

const assets = latestRelease ? getAssetsByOS(latestRelease) : null;
---

<Layout
  title={t.download.title}
  description={t.download.subtitle}
>
  <section class="py-20 sm:py-32">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-4xl sm:text-5xl font-bold mb-4">
          {t.download.title}
        </h1>
        <p class="text-xl text-[#94a3b8]">
          {t.download.subtitle}
        </p>
      </div>

      <!-- Error State -->
      {error && (
        <div class="bg-red-500/10 border border-red-500/20 rounded-xl p-8 text-center">
          <svg class="mx-auto h-12 w-12 text-red-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
          <p class="text-red-400">リリース情報の取得に失敗しました</p>
          <a href="https://github.com/S-IDE-studio/S-IDE/releases" class="inline-block mt-4 text-blue-400 hover:underline">
            GitHub Releasesページへ
          </a>
        </div>
      )}

      <!-- Release Info -->
      {latestRelease && (
        <div class="mb-12 text-center">
          <div class="inline-flex items-center gap-3 px-6 py-3 rounded-full bg-blue-500/10 border border-blue-500/20">
            <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 24 24">
              <circle cx="12" cy="12" r="10" />
            </svg>
            <span class="text-blue-400 font-semibold">{t.download.latest}</span>
            <span class="text-white font-mono">{latestRelease.tag_name}</span>
          </div>
        </div>
      )}

      <!-- Download Cards -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Windows -->
        {assets?.windows && (
          <a
            href={assets.windows.browser_download_url}
            class="group relative bg-[#1e293b] border border-white/10 rounded-xl p-8 text-center hover:border-blue-500/50 transition-all duration-200 card-hover"
          >
            <div class="mb-4">
              <svg class="mx-auto h-16 w-16 text-blue-400" viewBox="0 0 24 24" fill="currentColor">
                <path d="M0 3.449L9.75 2.1v9.451H0m10.949-9.602L24 0v11.4H10.949M0 12.6h9.75v9.451L0 20.699M10.949 12.6H24V24l-12.9-1.801"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">{t.download.windows}</h3>
            <p class="text-sm text-[#94a3b8] mb-4">{formatFileSize(assets.windows.size)}</p>
            <span class="inline-flex items-center text-blue-400 group-hover:translate-x-1 transition-transform">
              ダウンロード
              <svg class="ml-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
              </svg>
            </span>
          </a>
        )}

        <!-- macOS -->
        {assets?.macos && (
          <a
            href={assets.macos.browser_download_url}
            class="group relative bg-[#1e293b] border border-white/10 rounded-xl p-8 text-center hover:border-blue-500/50 transition-all duration-200 card-hover"
          >
            <div class="mb-4">
              <svg class="mx-auto h-16 w-16 text-blue-400" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2C6.477 2 2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.879V14.89h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.989C18.343 21.129 22 16.99 22 12c0-5.523-4.477-10-10-10z"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">{t.download.macos}</h3>
            <p class="text-sm text-[#94a3b8] mb-4">{formatFileSize(assets.macos.size)}</p>
            <span class="inline-flex items-center text-blue-400 group-hover:translate-x-1 transition-transform">
              ダウンロード
              <svg class="ml-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
              </svg>
            </span>
          </a>
        )}

        <!-- Linux -->
        {assets?.linux && (
          <a
            href={assets.linux.browser_download_url}
            class="group relative bg-[#1e293b] border border-white/10 rounded-xl p-8 text-center hover:border-blue-500/50 transition-all duration-200 card-hover"
          >
            <div class="mb-4">
              <svg class="mx-auto h-16 w-16 text-blue-400" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-1-13h2v6h-2zm0 8h2v2h-2z"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">{t.download.linux}</h3>
            <p class="text-sm text-[#94a3b8] mb-4">{formatFileSize(assets.linux.size)}</p>
            <span class="inline-flex items-center text-blue-400 group-hover:translate-x-1 transition-transform">
              ダウンロード
              <svg class="ml-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
              </svg>
            </span>
          </a>
        )}
      </div>

      <!-- GitHub Link -->
      <div class="mt-16 text-center">
        <p class="text-[#94a3b8] mb-4">または GitHub Releases から</p>
        <a
          href="https://github.com/S-IDE-studio/S-IDE/releases"
          class="inline-flex items-center gap-2 text-blue-400 hover:text-blue-300 transition-colors"
        >
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
          </svg>
          すべてのリリースを表示
        </a>
      </div>
    </div>
  </section>
</Layout>
