---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { translations } from '../../i18n/ui';

const locale = Astro.currentLocale || 'ja';
const t = translations[locale as keyof typeof translations];

// Get all docs entries
const docsEntries = await getCollection('docs');
const docs = docsEntries.sort((a, b) => (a.data.order || 999) - (b.data.order || 999));
---

<Layout title="ドキュメント - S-IDE">
  <section class="py-20 sm:py-32">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl sm:text-5xl font-bold mb-8">ドキュメント</h1>
      <div class="space-y-4">
        {docs.map((doc) => (
          <a
            href={`/docs/${doc.slug}`}
            class="block p-6 bg-[#1e293b] border border-white/10 rounded-xl hover:border-blue-500/30 transition-colors"
          >
            <h2 class="text-xl font-semibold mb-2">{doc.data.title}</h2>
            <p class="text-[#94a3b8]">{doc.data.description}</p>
          </a>
        ))}
      </div>
    </div>
  </section>
</Layout>
