---
import ReleaseItem from '../components/ui/ReleaseItem.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="リリースノート - S-IDE">
  <section class="releases-container">
    <div class="releases-grid">
      <!-- Page Title (H1) -->
      <h1 class="absolute" style="left: 0; top: 0; color: var(--color-text-primary); font-family: Inter; font-size: 48px; font-weight: 700;">リリースノート</h1>

      <!-- Label -->
      <p class="releases-label">RELEASES</p>

      <!-- v1.2.0 -->
      <ReleaseItem
        version="v1.2.0"
        date="Coming Soon"
        title="API連携機能"
        description="外部API経由でLLMを呼び出す機能を追加。独自の拡張機能を作成可能。"
        topPosition="120px"
        screenshotSize="large"
      />

      <!-- v1.1.0 -->
      <ReleaseItem
        version="v1.1.0"
        date="2025.02.01"
        title="コンテキスト生成機能追加"
        description="エージェントごとにカスタムプロンプト設定が可能に。テンプレート機能で再利用可能。"
        features={['• プロンプトテンプレート', '• 変数履歴']}
        topPosition="704px"
        screenshotSize="small"
        showScreenshotLeft={true}
      />

      <!-- v1.0.0 -->
      <ReleaseItem
        version="v1.0.0"
        date="2025.01.15"
        title="初期リリース - AIエージェント統合基盤"
        description="複数のLLMを一元管理するローカル実行環境を構築。GPT-4、Claude、Geminiなどの主要モデルに対応。"
        features={['• マルチモデル対応', '• ローカルファースト', '• ブラウザベースUI']}
        topPosition="1240px"
        screenshotSize="small"
        showScreenshotLeft={false}
      />
    </div>
  </section>
</Layout>
