<section class="relative bg-black" style="height: 1280px;">
  <!-- Grid Container -->
  <div class="relative mx-auto" style="width: 916px; height: 1280px;">
    <!-- Label - Column 1 -->
    <p class="absolute" style="left: 0; top: 60px; color: #666666; font-family: Inter; font-size: 14px; font-weight: 600; letter-spacing: 2px;">
      SCREENSHOTS
    </p>

    <!-- Pattern 1: Text Left + Image Right -->
    <article class="absolute flex items-center" style="left: 0; top: 120px; width: 916px; height: 320px; gap: 9px;">
      <!-- Text - Column 1-3 -->
      <div style="width: 453px;">
        <h2 class="mb-4" style="color: #ffffff; font-family: Inter; font-size: 24px; font-weight: 700;">エージェント管理</h2>
        <p style="color: #bbbbbb; font-family: Inter; font-size: 14px; font-weight: normal; line-height: 1.5;">
          複数のAIエージェントを統合して一元管理
        </p>
      </div>
      <!-- Image - Column 4-6 -->
      <div class="flex items-center justify-center" style="width: 453px; height: 320px; background-color: #1a1a1a; border: 1px solid #333333;" role="img" aria-label="エージェント管理画面のスクリーンショット">
        <span style="color: #666666; font-family: Inter; font-size: 12px; font-weight: 600;">Screenshot</span>
      </div>
    </article>

    <!-- Pattern 2: Image Left + Text Right -->
    <article class="absolute flex items-center" style="left: 0; top: 460px; width: 916px; height: 320px; gap: 9px;">
      <!-- Image - Column 1-3 -->
      <div class="flex items-center justify-center" style="width: 453px; height: 320px; background-color: #1a1a1a; border: 1px solid #333333;" role="img" aria-label="ローカル実行画面のスクリーンショット">
        <span style="color: #666666; font-family: Inter; font-size: 12px; font-weight: 600;">Screenshot</span>
      </div>
      <!-- Text - Column 4-6 -->
      <div style="width: 453px;">
        <h2 class="mb-4" style="color: #ffffff; font-family: Inter; font-size: 24px; font-weight: 700;">ローカル実行</h2>
        <p style="color: #bbbbbb; font-family: Inter; font-size: 14px; font-weight: normal; line-height: 1.5;">
          データをローカル環境で安全に処理
        </p>
      </div>
    </article>

    <!-- Pattern 3: Full Width Image + Text Below -->
    <article class="absolute flex flex-col" style="left: 0; top: 800px; width: 916px; gap: 16px;">
      <!-- Image - Column 1-6 -->
      <div class="flex items-center justify-center" style="width: 916px; height: 400px; background-color: #1a1a1a; border: 1px solid #333333;" role="img" aria-label="マルチデバイス対応画面のスクリーンショット">
        <span style="color: #666666; font-family: Inter; font-size: 12px; font-weight: 600;">Screenshot</span>
      </div>
      <!-- Text - Column 1-6 -->
      <div class="text-center" style="width: 916px;">
        <h2 class="mb-3" style="color: #ffffff; font-family: Inter; font-size: 24px; font-weight: 700;">マルチデバイス対応</h2>
        <p style="color: #bbbbbb; font-family: Inter; font-size: 14px; font-weight: normal; line-height: 1.5;">
          あらゆるデバイスからブラウザでアクセス可能
        </p>
      </div>
    </article>
  </div>
</section>
