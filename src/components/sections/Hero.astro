---
import { getTranslations } from '../../i18n/ui';

const t = getTranslations(Astro.currentLocale);
---

<section class="relative overflow-hidden" style="height: 370px;">
  {/* Grid Container */}
  <div class="relative z-10 mx-auto" style="width: 916px; height: 370px;">
    {/* Badge - Column 1 */}
    <div class="absolute inline-flex items-center bg-white rounded-full" style="left: 0; top: 40px; gap: 8px; padding: 8px 16px; border-radius: var(--radius-pill);" aria-hidden="true">
      <div class="rounded-full" style="width: 8px; height: 8px; background-color: #000000;"></div>
      <span style="color: #000000; font-family: Inter; font-size: 12px; font-weight: 600;">
        v1.0.0 現在公開中
      </span>
    </div>

    {/* Title - Column 1-6 */}
    <h1 class="absolute text-white text-left" style="left: 0; width: 916px; top: 90px; font-family: Inter; font-size: 64px; font-weight: 700; line-height: 1.1;">
      {t.hero.title}
      <br />
      {t.hero.gradient}
    </h1>

    {/* Subtitle - Column 1-6 */}
    <p class="absolute text-left" style="left: 0; width: 916px; top: 240px; color: #bbbbbb; font-family: Inter; font-size: 18px; font-weight: normal; line-height: 1.5;">
      {t.hero.subtitle}
    </p>

    {/* CTA Buttons - Column 1-6 */}
    <div class="absolute flex items-center" style="left: 0; width: 916px; top: 300px; gap: 9px;">
      {/* Download Button */}
      <a
        href="/download"
        class="flex items-center justify-center rounded-full"
        style="width: 299px; height: 44px; background-color: #ffffff;"
        aria-label="ダウンロードページへ移動"
      >
        <span style="color: #000000; font-family: Inter; font-size: 14px; font-weight: 600;">
          {t.hero.cta}
        </span>
      </a>

      {/* Docs Button */}
      <a
        href="/docs"
        class="flex items-center justify-center rounded-full"
        style="width: 299px; height: 44px; background-color: #333333;"
        aria-label="ドキュメントページへ移動"
      >
        <span style="color: #ffffff; font-family: Inter; font-size: 14px; font-weight: 600;">
          {t.nav.docs}
        </span>
      </a>
    </div>
  </div>
</section>
