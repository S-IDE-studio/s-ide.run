---
import { getTranslations } from '../../i18n/ui';

const t = getTranslations(Astro.currentLocale);
---

<section class="relative overflow-hidden min-h-[370px]">
  {/* Grid Container */}
  <div class="relative z-10 container-grid py-10 gap-6">
    {/* Badge */}
    <div class="inline-flex items-center self-start bg-white rounded-full px-[9px] py-2 gap-2" aria-hidden="true">
      <div class="rounded-full w-2 h-2 bg-black"></div>
      <span class="text-black text-xs font-semibold leading-tight">
        v1.0.0 現在公開中
      </span>
    </div>

    {/* Title */}
    <h1 class="text-white text-left font-bold leading-[1.1]">
      {t.hero.title}
      <br />
      <span class="bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent">
        {t.hero.gradient}
      </span>
    </h1>

    {/* Subtitle */}
    <p class="text-left text-[#bbbbbb] leading-[1.5]">
      {t.hero.subtitle}
    </p>

    {/* CTA Buttons */}
    <div class="flex items-center gap-2 cta-buttons">
      {/* Download Button */}
      <a
        href="/download"
        class="flex items-center justify-center rounded-full bg-white h-11 cta-button-primary grid-2-col"
        aria-label="ダウンロードページへ移動"
      >
        <span class="text-black text-sm font-semibold">
          {t.hero.cta}
        </span>
      </a>

      {/* Docs Button */}
      <a
        href="/docs"
        class="flex items-center justify-center rounded-full bg-[#333333] h-11 cta-button-secondary grid-2-col"
        aria-label="ドキュメントページへ移動"
      >
        <span class="text-white text-sm font-semibold">
          {t.nav.docs}
        </span>
      </a>
    </div>
  </div>

  {/* Responsive styles */}
  <style scoped>
    /* CTA buttons responsive layout */
    .cta-buttons {
      flex-direction: row;
      gap: 9px;
    }

    .cta-button-primary,
    .cta-button-secondary {
      width: var(--grid-2-col); /* 2 columns from global grid system */
    }

    /* Mobile (< 480px) */
    @media (max-width: 479px) {
      .cta-buttons {
        flex-direction: column;
        align-items: stretch;
      }
      .cta-button-primary,
      .cta-button-secondary {
        width: 100%;
      }
      section {
        min-height: 320px;
      }
      h1 {
        font-size: 32px;
      }
      p {
        font-size: 14px;
      }
    }

    /* Small (480-616px) - 2 columns */
    @media (min-width: 480px) and (max-width: 616px) {
      .cta-buttons {
        flex-direction: column;
        align-items: stretch;
      }
      .cta-button-primary,
      .cta-button-secondary {
        width: 100%;
      }
      section {
        min-height: 340px;
      }
      h1 {
        font-size: 40px;
      }
      p {
        font-size: 16px;
      }
    }

    /* Medium (617-915px) - 4 columns */
    @media (min-width: 617px) and (max-width: 915px) {
      .cta-buttons {
        /* 4カラム分の実グリッド幅 (= 4列 + 3ギャップ) に合わせる */
        width: calc(4 * var(--grid-column-width) + 3 * var(--grid-gap));
        margin-left: auto;
        margin-right: auto;
        justify-content: space-between;
      }
      section {
        min-height: 360px;
      }
      h1 {
        font-size: 52px;
      }
      p {
        font-size: 17px;
      }
    }

    /* Large (916px+) - 6 columns */
    @media (min-width: 916px) {
      section {
        min-height: 370px;
      }
      h1 {
        font-size: 64px;
      }
      p {
        font-size: 18px;
      }
    }
  </style>
</section>
