---
interface Props {
  title: string;
  description: string;
  image: string;
  type: 'website' | 'article';
  canonicalURL: URL;
}

const { title, description, image, type, canonicalURL } = Astro.props;

const siteName = 'S-IDE';
const fullTitle = title === siteName ? title : `${title} | ${siteName}`;

// Ensure Astro.site is not null for URL resolution
const siteUrl = Astro.site ?? new URL('https://s-ide.run');
---

<!-- Primary Meta Tags -->
<title>{fullTitle}</title>
<meta name="title" content={fullTitle} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, siteUrl)} />
<meta property="og:site_name" content={siteName} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={fullTitle} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image, siteUrl)} />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Additional SEO -->
<meta name="robots" content="index, follow" />
<meta name="googlebot" content="index, follow" />

<!-- Structured Data -->
<script is:inline type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "S-IDE",
  "alternateName": "S-IDE Studio",
  "operatingSystem": "Windows, macOS, Linux",
  "applicationCategory": "DeveloperApplication",
  "description": {JSON.stringify(description)},
  "url": {JSON.stringify(canonicalURL)},
  "image": {JSON.stringify(new URL(image, siteUrl))},
  "author": {
    "@type": "Organization",
    "name": "S-IDE Studio"
  },
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD"
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.8",
    "ratingCount": "120"
  }
}
</script>
