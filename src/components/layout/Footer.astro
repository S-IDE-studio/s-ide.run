---
const currentYear = new Date().getFullYear();
---

<footer class="w-full border-t border-white/10 bg-black">
  <div class="mx-auto footer-container">
    <!-- Grid Layout for Main Content -->
    <div class="footer-grid">
      <!-- Brand - Column 1-2 -->
      <div class="footer-brand">
        <div class="flex items-center gap-2">
          <img src="/s-ide-icon.svg" alt="S-IDE" class="h-6 w-6" loading="lazy" />
          <span class="footer-brand-text">S-IDE</span>
        </div>
        <p class="footer-description">
          Next-Gen IDE for AI Agents
        </p>
      </div>

      <!-- Product - Column 4 -->
      <nav class="footer-nav footer-nav-product" aria-label="フッタープロダクトリンク">
        <input id="footer-toggle-product" type="checkbox" class="footer-toggle" aria-hidden="true" />
        <label for="footer-toggle-product" class="footer-nav-title-wrapper">
          <h3 class="footer-nav-title">Product</h3>
          <!-- Lucide Icons: chevron-down -->
          <svg
            class="footer-toggle-icon"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            width="16"
            height="16"
            aria-hidden="true"
          >
            <path
              d="m6 9 6 6 6-6"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            />
          </svg>
        </label>
        <ul class="footer-nav-list" role="list">
          <li><a href="/features" class="footer-nav-link hover:text-white transition-colors">Features</a></li>
          <li><a href="/download" class="footer-nav-link hover:text-white transition-colors">Download</a></li>
          <li><a href="/features" class="footer-nav-link hover:text-white transition-colors">Releases</a></li>
        </ul>
      </nav>

      <!-- Resources - Column 5 -->
      <nav class="footer-nav footer-nav-resources" aria-label="フッターリソースリンク">
        <input id="footer-toggle-resources" type="checkbox" class="footer-toggle" aria-hidden="true" />
        <label for="footer-toggle-resources" class="footer-nav-title-wrapper">
          <h3 class="footer-nav-title">Resources</h3>
          <!-- Lucide Icons: chevron-down -->
          <svg
            class="footer-toggle-icon"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            width="16"
            height="16"
            aria-hidden="true"
          >
            <path
              d="m6 9 6 6 6-6"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            />
          </svg>
        </label>
        <ul class="footer-nav-list" role="list">
          <li><a href="/docs" class="footer-nav-link hover:text-white transition-colors">Documentation</a></li>
          <li><a href="https://github.com/S-IDE-studio/S-IDE" target="_blank" rel="noopener noreferrer" class="footer-nav-link hover:text-white transition-colors">GitHub</a></li>
        </ul>
      </nav>

      <!-- Legal - Column 6 -->
      <nav class="footer-nav footer-nav-legal" aria-label="フッターリーガルリンク">
        <input id="footer-toggle-legal" type="checkbox" class="footer-toggle" aria-hidden="true" />
        <label for="footer-toggle-legal" class="footer-nav-title-wrapper">
          <h3 class="footer-nav-title">Legal</h3>
          <!-- Lucide Icons: chevron-down -->
          <svg
            class="footer-toggle-icon"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            width="16"
            height="16"
            aria-hidden="true"
          >
            <path
              d="m6 9 6 6 6-6"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            />
          </svg>
        </label>
        <ul class="footer-nav-list" role="list">
          <li><a href="https://github.com/S-IDE-studio/S-IDE/blob/main/LICENSE" target="_blank" rel="noopener noreferrer" class="footer-nav-link hover:text-white transition-colors">License</a></li>
        </ul>
      </nav>
    </div>

    <!-- Bottom -->
    <div class="footer-bottom">
      <div class="footer-bottom-content">
        <p class="footer-copyright">
          &copy; {currentYear} S-IDE. All rights reserved.
        </p>
      </div>
    </div>
  </div>
</footer>

<style scoped>
  /* Base container */
  .footer-container {
    max-width: 916px;
    padding: 48px 0 24px;
  }

  /* Grid layout for main content - Large (916px+) - 6 columns */
  .footer-grid {
    display: grid;
    grid-template-columns: repeat(6, var(--grid-column-width));
    gap: var(--grid-gap);
    margin-bottom: 32px;
  }

  /* Brand - Column 1-2 */
  .footer-brand {
    grid-column: 1 / 3;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  /* Product Nav - Column 4 */
  .footer-nav-product {
    grid-column: 4;
  }

  /* Resources Nav - Column 5 */
  .footer-nav-resources {
    grid-column: 5;
  }

  /* Legal Nav - Column 6 */
  .footer-nav-legal {
    grid-column: 6;
  }

  /* Typography */
  .footer-brand-text {
    font-weight: 700;
    color: #ffffff;
    font-size: 16px;
  }

  .footer-description {
    font-size: 14px;
    color: #bbbbbb;
  }

  .footer-toggle {
    display: none;
  }

  .footer-nav-title-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    cursor: pointer;
    margin-bottom: 16px;
  }

  .footer-nav-title {
    font-weight: 600;
    margin: 0;
    color: #ffffff;
    font-size: 14px;
  }

  .footer-toggle-icon {
    color: #bbbbbb;
    transition: transform 0.2s ease;
    flex-shrink: 0;
  }

  .footer-nav-list {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .footer-nav-link {
    font-size: 14px;
    color: #bbbbbb;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* Bottom section */
  .footer-bottom {
    padding-top: 32px;
  }

  .footer-copyright {
    font-size: 14px;
    color: #bbbbbb;
  }

  /* Mobile (< 480px) */
  @media (max-width: 479px) {
    .footer-container {
      max-width: 100%;
      padding-left: 18px;
      padding-right: 18px;
    }
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 24px;
    }
    .footer-brand,
    .footer-nav-product,
    .footer-nav-resources,
    .footer-nav-legal {
      grid-column: 1;
    }
    /* 1カラム時もトグルで開閉できるようにする */
    .footer-toggle-icon {
      display: block;
    }
    .footer-nav-list {
      display: none;
    }
    .footer-toggle:checked ~ .footer-nav-list {
      display: flex;
    }
    .footer-toggle:checked ~ .footer-nav-title-wrapper .footer-toggle-icon {
      transform: rotate(180deg);
    }
  }

  /* Small (480-616px) - 2 columns */
  @media (min-width: 480px) and (max-width: 616px) {
    .footer-container {
      max-width: var(--grid-2-col);
    }
    .footer-grid {
      grid-template-columns: repeat(2, var(--grid-column-width));
      gap: 24px var(--grid-gap); /* 行間を24pxに広げる */
    }
    .footer-brand {
      grid-column: 1 / 3;
    }
    /* 3カテゴリを縦に並べる（2カラム幅で全幅に配置） */
    .footer-nav-product,
    .footer-nav-resources,
    .footer-nav-legal {
      grid-column: 1 / 3;
    }
    /* 2カラム時はトグルアイコンを表示し、リストはデフォルト非表示 */
    .footer-toggle-icon {
      display: block;
    }
    .footer-nav-list {
      display: none;
    }
    /* チェックが入ったときにリストを表示、アイコンを回転 */
    .footer-toggle:checked ~ .footer-nav-list {
      display: flex;
    }
    .footer-toggle:checked ~ .footer-nav-title-wrapper .footer-toggle-icon {
      transform: rotate(180deg);
    }
  }

  /* Medium (617-915px) - 4 columns */
  @media (min-width: 617px) and (max-width: 915px) {
    .footer-container {
      max-width: var(--grid-4-col);
    }
    .footer-grid {
      grid-template-columns: repeat(4, var(--grid-column-width));
      gap: var(--grid-gap);
    }
    .footer-brand {
      /* S-IDEセクションを1カラムに収める */
      grid-column: 1;
    }
    .footer-nav-product {
      grid-column: 2;
    }
    .footer-nav-resources {
      grid-column: 3;
    }
    .footer-nav-legal {
      grid-column: 4;
    }
    /* 4カラム以上ではトグルアイコン非表示、リストは常に表示 */
    .footer-toggle-icon {
      display: none;
    }
    .footer-nav-list {
      display: flex;
    }
  }

  /* Large (916px+) - 6 columns */
  @media (min-width: 916px) {
    .footer-container {
      max-width: 916px;
    }
    .footer-grid {
      grid-template-columns: repeat(6, var(--grid-column-width));
      gap: var(--grid-gap);
    }
    .footer-brand {
      grid-column: 1 / 3;
    }
    .footer-nav-product {
      grid-column: 4;
    }
    .footer-nav-resources {
      grid-column: 5;
    }
    .footer-nav-legal {
      grid-column: 6;
    }
    /* 6カラム以上ではトグルアイコン非表示、リストは常に表示 */
    .footer-toggle-icon {
      display: none;
    }
    .footer-nav-list {
      display: flex;
    }
  }
</style>
