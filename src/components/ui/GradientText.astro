---
interface Props {
  as?: 'h1' | 'h2' | 'h3' | 'span';
  class?: string;
  animate?: boolean;
}

const { as: Tag = 'span', class: className = '', animate = false } = Astro.props;

const classes = `bg-gradient-to-r from-[#3b82f6] to-[#8b5cf6] bg-clip-text text-transparent ${animate ? 'animate-gradient' : ''} ${className}`;
---

<Tag class={classes}>
  <slot />
</Tag>
